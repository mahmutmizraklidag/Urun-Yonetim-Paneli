@model IEnumerable<Category>
@{
    var categories = Model;
    foreach (var item in categories.Where(c => c.ParentId == 0))
    {
        <li class="dropdown">
            <a href="#"><span>@item.Name</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
                @foreach (var downmenu in categories.Where(c => c.ParentId == item.Id))
                {
                    <li><a  href="/Categories/Index/@downmenu.Id">@downmenu.Name</a></li>
                }
            </ul>
        </li>
        
    }
}
